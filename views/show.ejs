<!-- include header -->
<% include partials/header %>

<section>
  <h1>Campground Details</h1>
  <div class="linkContainer">
    <a class="btnNav" href="http://localhost:8000/index">View all camps</a>
  </div>
    <div class="card-labelCont"><h1 class="card-label"><%= campground.name %></h1></div>
  <div class="card__full">
    <div class="card-imgCont">
      <img class="card-img" src="<%= campground.image %>" alt="<%= campground.name %>" >
    </div>
    <div class="card-description">
      <p class="card-description__text"><%= campground.description %></p>
  </div>
  <div class="comment">
    <h2>Comments</h2>
    <% campground.comments.forEach(function(comment){ %>
      <div class="comment__full">
        <div class="comment__content">
          <p class="comment__text"><%= comment.text %></p>
          <p class="comment__author"><%= comment.author %></p>
        </div>
      </div>
    <%})%>
  </div>
</section>
<!-- include footer -->
<% include partials/footer %>
